# Database connection (same as main app)
DATABASE_URL=your_neon_connection_string_here

# Actionstep credentials
ACTIONSTEP_USERNAME=your_actionstep_email@example.com
ACTIONSTEP_PASSWORD=your_actionstep_password
ACTIONSTEP_URL=https://go.actionstepstaging.com

# Actionstep 2FA (TOTP secret)
# Get this from your authenticator app - see README for instructions
ACTIONSTEP_TOTP_SECRET=your_totp_secret_here

# Polling interval in seconds (how often to check for new jobs)
POLL_INTERVAL=30

# Enable headless mode (false = show browser, useful for debugging)
HEADLESS=true

# Maximum concurrent jobs (1 is safest to avoid conflicts)
MAX_CONCURRENT_JOBS=1
